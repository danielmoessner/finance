{% extends "static/m.njk" %}


{% set activePage="" %}
{% set reverse=url("users:login") %}
{% set title="Login" %}


{% block main %} 

	{% import "modules/form_contents.njk" as form %}
	<div class="login">
		<div class="wrapper">
			<h1 class="login--heading">Login</h1>
			{% if errors %}
				<div class="login--errors">
					{% for error in errors %}
						<p class="login--errors--error">{{ error|safe }}</p>
					{% endfor %}
				</div>
			{% endif %}
			<form action="{{ url('users:login') }}" method="POST">
				<input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
				{{ form.justInput(text="Username", type="text", name="username", wrapperClass="login--input-group", inputClass="login--input-group--input") }}
				{{ form.justInput(text="Password", type="password", name="password", wrapperClass="login--input-group", inputClass="login--input-group--input") }}
				<input type="submit" value="Login" class="login--login-button">
			</form>
			<a type="button" href="{{ url('users:signup') }}" class="login--signup-button" role="button">Sign up as a new user.</a>
		</div>
	</div>


{% endblock %}