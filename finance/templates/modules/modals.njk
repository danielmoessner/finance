{% macro modal(content, actionurl, id, title, csrf_token, submitValue, dismissValue) %}
	<div class="modal" id="{{ id }}">
		<div class="modal-dialog" role="document">
			<div class="modal-content">   
				<div class="modal-header">
					<h4 class="modal-title">{{ title }}</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div> 
				<form action="{{ actionurl | safe }}" method="POST">
					<div class="modal-body">
						{{ content | safe }}
					</div>
					<div class="modal-footer">
						<input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
						<input type="submit" style="cursor: pointer;" value="{{ submitValue }}" class="btn btn-primary">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">{{ dismissValue }}</button>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endmacro %}
