{% if tab=="flows" %}
    <table class="table table-dark table-responsive-md rounded">
        <thead>
        <tr>
           <th scope="col">Date</th>
           <th scope="col">Description</th>
           <th scope="col">Bank</th>
            <th class="text-end" scope="col">Flow</th>
            <th class="text-end" scope="col">
                {{ bg.modalButton("Add Flow", "#addFlow", url("stocks:add_flow")+"?bank="+object.pk|string) }}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for flow in flows %}
            <tr>
                <td>{{ localtime(flow.date).strftime('%d.%m.%Y %H:%M') }}</td>
                <td>{{ flow.short_description }}</td>
                <td>{{ flow.bank }}</td>
                <td class="text-end">{{ flow.flow }}</td>
                <td>
                    <div class="d-flex justify-content-end">
                        {{ mg.djangoModal("Edit Flow", "editFlow") }}
                        {{ bg.modalButton("Edit", "#editFlow", url("stocks:edit_flow", args=[flow.pk])) }}
                        {{ mg.djangoModal("Delete Flow", "deleteFlow") }}
                        {{ bg.modalButton("Delete", "#deleteFlow", url("stocks:delete_flow", args=[flow.pk])) }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="5">
                <div class="d-flex">
                    {{ mg.djangoModal("Add Flow", "addFlow") }}
                    {{ bg.modalButton("Add Flow", "#addFlow", url("stocks:add_flow")+"?bank="+object.pk|string) }}
                </div>
            </td>
        </tr>
        </tbody>
    </table>
{% endif %}