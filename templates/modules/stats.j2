{% if tab == 'stats' %}
    <div class="row mb-5">
        {% for key, value in stats.items() %}
            <div class="col-12 col-sm-6 col-md-3">
                <div class="card text-white bg-dark mb-1">
                    <div class="card-body">
                        <div class="card-title h5">{{ key }}</div>
                        <p class="card-text">{{ value }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}