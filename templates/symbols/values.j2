{% if tab=="values" %}
    <table class="table table-dark table-responsive-md rounded">
        <thead>
        <tr>
            <th class="border-0" scope="col">Date</th>
            {% if price_and_amount %}
                <th class="border-0" scope="col">Price</th>
                <th class="border-0" scope="col">Amount</th>
            {% endif %}
            <th class="border-0" scope="col">Value</th>
        </tr>
        </thead>
        <tbody>
        {% for value in values() %}
            <tr>
                <td>{{ value[0].strftime('%d.%m.%Y') }}</td>
                <td>{{ "%.2f"|format(value[1]) }}</td>
                {% if price_and_amount %}
                    <td>{{ "%.0f"|format(value[2]) }}</td>
                    <td>{{ "%.2f"|format(value[3]) }}</td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}